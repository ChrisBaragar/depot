<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<div id="user_nav">
			<% if current_user %>
				Logged in as: <%= current_user.email %>
				<%= link_to "Log out", log_out_path %>
			<% else %>
				<%= link_to "Sign up", sign_up_path %> or
				<%= link_to "Log in", log_in_path %>
			<% end %>
		</div>
		<%= link_to image_tag("logo.png"), store_path %>
		<%= @page_title || "Pragmatic Bookshelf"%>
	</div>

	<div id="columns">
		<div id="side">
			<ul>
				<li><a href="http://">Home</a></li>
				<li><a href="http://.../faq">Questions</a></li>
				<li><a href="http://.../news">News</a></li>
				<li><a href="http://.../contact">Contact</a></li>
			</ul>

			<!--This uses an application helper to only render the cart if there's stuff in it. -->
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
					<%= render @cart %>
				<% end %>
			<% end %>

			<div class="timebar">
				<% t=Time.now %>
				<%= t.strftime("It's %l:%M%P") %>
				<br>
				<%= t.strftime("on %A") %>
			</div>
		</div>
		<div id="main">
<!-- 				<% flash.each do |name,msg| %>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %> -->
			<%= yield %>
		</div>
	</div>

</body>
</html>
